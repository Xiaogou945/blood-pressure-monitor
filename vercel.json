{
    "version": 2,
    "builds": [
        {
            "src": "vercel_app.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.9",
                "includeFiles": ["**/*.py"],
                "excludeFiles": ["**/*.pyc", "**/__pycache__/**"]
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "vercel_app.py"
        }
    ],
    "env": {
        "FLASK_ENV": "production",
        "FLASK_APP": "app.py",
        "PYTHON_VERSION": "3.9",
        "PYTHONPATH": ".",
        "DEBUG": "true"
    }
}
